{
    "name": "legion-yb-dashboard",
    "version": "1.0.0",
    "description": "Legion YB Sale Tracker - Real-time dashboard for tracking token claims, refunds, and investments",
    "private": true,
    "author": "@0x_Shailesh",
    "license": "MIT",
    "scripts": {
        "dev": "next dev",
        "build": "npm run build:move-subgraph && next build && npm run build:restore-subgraph",
        "build:move-subgraph": "if [ -d 'subgraph' ]; then mv subgraph ../subgraph_temp; fi",
        "build:restore-subgraph": "if [ -d '../subgraph_temp' ]; then mv ../subgraph_temp subgraph; fi",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf .next out dist"
    },
    "dependencies": {
        "clsx": "^2.0.0",
        "ethers": "^6.8.1",
        "lucide-react": "^0.294.0",
        "next": "14.0.4",
        "react": "^18",
        "react-dom": "^18",
        "tailwind-merge": "^2.0.0"
    },
    "devDependencies": {
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "autoprefixer": "^10.4.16",
        "eslint": "^8",
        "eslint-config-next": "14.0.4",
        "ignore-loader": "^0.1.2",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.3.3",
        "typescript": "^5"
    }
}